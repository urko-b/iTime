{
  "name": "itime",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node -r ts-node/register ./index.ts",
    "start:watch": "nodemon -r dotenv/config ./index.js",
    "tsc": "node_modules/.bin/tsc",
    "prod": "node_modules/.bin/tsc && nodemon --config nodemon.json ./dist/index.js",
    "build": "tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "start_local": "node -r dotenv/config ./index.js",
    "test": "nodemon --exec mocha -timeout 30000  -r ts-node/register test/**/*.spec.ts",
    "dev": "nodemon --config nodemon.json --inspect=0.0.0.0:5858 -L index.js",
    "unittest": "mocha --exit  -r ts-node/register test/**/*.spec.ts"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "./"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "author": "Pablo Guerrero Gonz√°lez",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^11.9.4",
    "bcryptjs": "^2.4.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "fast-json-patch": "^2.0.7",
    "jsonwebtoken": "^8.3.0",
    "method-override": "^3.0.0",
    "mongodb": "^3.2.4",
    "morgan": "^1.9.1",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3"
  },
  "devDependencies": {
    "@microsoft/tsdoc": "^0.12.8",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.1",
    "@types/method-override": "0.0.31",
    "@types/mocha": "^5.2.6",
    "@types/mongoose": "^5.3.17",
    "@types/morgan": "^1.7.35",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "npm": "^6.9.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.0.2",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1"
  }
}
